# Backend Umgebungsvariablen

# Node Environment
NODE_ENV=development
PORT=5001

# Datenbank-Konfiguration
DATABASE_URL="postgresql://quizappuser:replace_with_a_strong_password@postgres:5432/quizduell_app_db"

# JWT-Konfiguration
JWT_SECRET="replace_this_with_your_actual_strong_jwt_secret_key"
JWT_EXPIRES_IN=7d

# Admin-Benutzer (Initial Setup)
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=ReplaceWithStrongAdminPassword123!
INITIAL_ADMIN_NAME="Quiz Administrator"
INITIAL_ADMIN_UNIHANDLE="UniAdmin"

# Frontend URL (für CORS und Reset-Links)
FRONTEND_URL=http://localhost:3000

# Email-Konfiguration für Passwort-Reset
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@planetary-health-quiz.de